<div id="masthead">
  <a id="shield" href="/"><img src="/assets/site_images/vecnet.png" width="100" height="108" alt="VecNet" /></a>
  <h1 id="title">VECNet Digital Library<br/> Metadata Catalog</h1>
  <div class="navbar">
    <div class="nav-inner">
      <div class="container">
        <ul class="nav pull-right">
          <li <%= 'class=active' if params[:controller] == "catalog" and action_name == "index" %>>
              <%= link_to "Home", root_path, class: "top_nav" %></li>
          <li <%= 'class=active' if params[:controller] == "dashboard" and action_name == "index" %>>
              <%= link_to "Dashboard", dashboard_path, class: "top_nav" %></li>
          <li <%= 'class=active' if params[:controller] == "static" and action_name == "help" %>>
              <%= link_to "Help", "/help", class: "top_nav" %></li>
          <li>
            <div class="btn-group">
              <% if current_user %>
                 <%= render :partial => 'users/notify_link' %>
                <a href="<%= profile_path(current_user.to_s) %>" class="btn btn-small " title="click for User Profile"><i class="icon-user">&nbsp;</i><%= current_user.name %></a>
                <a class="btn btn-small dropdown-toggle" data-toggle="dropdown" href="#"><span class="icon-caret-down" title="click for additional menu options"></span></a>
                <ul class="dropdown-menu">
                    <li><%= link_to raw('<i class="icon-dashboard"></i> my dashboard'), dashboard_path, :id => 'dashboard_nav_link'  %></li>
                    <li><%= link_to raw('<i class="icon-upload-alt"></i> upload'), new_generic_file_path, :id => 'upload_nav_link'  %></li>
                    <li><%= link_to raw('<i class="icon-cog"></i> edit profile'), edit_profile_path(current_user.login), :id => 'upload_nav_link'  %></li>
                    <li class="divider"></li>
                    <li><%= link_to raw('<i class="icon-signout"></i> log out'), destroy_user_session_path, :id => 'logout_nav_link' %></li>
                </ul>
              <% else %>
                  <%= link_to raw('<i class="icon-signin"></i> Login'), new_user_session_path, :class => "btn btn-small" %>
              <% end %>
            </div><!-- /.btn-group -->
          </li>
        </ul><!-- /.nav /.pull-right -->
      </div><!-- /.container -->
    </div><!-- /.nav-inner -->
  </div><!-- /.navbar -->
  <%# logger.info " controller = #{params[:controller]}" %>
  <%= render :partial => 'catalog/search_form' %>
</div> <!-- /masthead -->
